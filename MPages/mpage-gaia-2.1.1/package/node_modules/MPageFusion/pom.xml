<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>mpage-artifact-parent</artifactId>
    <groupId>com.cerner.discernabu.assembly</groupId>
    <version>0.0.4</version>
  </parent>
  <groupId>com.cerner.mpagedev.fusion</groupId>
  <artifactId>mpage-fusion</artifactId>
  <version>1.24.0</version>
  <packaging>jar</packaging>
  <name>mpage-fusion</name>
  <description>The MPageUI Fusion Project</description>
  <inceptionYear>2016</inceptionYear>
  <url>https://github.cerner.com/DiscernABU/MPageFusion</url>
  <scm>
    <url>https://github.cerner.com/DiscernABU/MPageFusion</url>
    <connection>scm:git:https://github.cerner.com/DiscernABU/MPageFusion.git</connection>
    <tag>v1.24.0</tag>
  </scm>
  <properties>
    <assembly.destination.location>./target/classes/cerner/mpagedev/mpagefusion</assembly.destination.location>
    <assembly.source.location>./dist</assembly.source.location>
  </properties>
  <dependencies></dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>1.3</version>
        <configuration>
          <installDirectory>target</installDirectory>
        </configuration>
        <executions>
          <execution>
            <id>install node and npm</id>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
            <configuration>
              <nodeVersion>v6.9.4</nodeVersion>
            </configuration>
          </execution>
          <execution>
            <id>npm install</id>
            <goals>
              <goal>npm</goal>
            </goals>
            <configuration>
              <arguments>install</arguments>
            </configuration>
          </execution>
          <execution>
            <id>npm build</id>
            <goals>
              <goal>npm</goal>
            </goals>
            <configuration>
              <arguments>run build</arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.7</version>
        <executions>
          <execution>
            <id>copy-js</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${assembly.destination.location}/js</outputDirectory>
              <resources>
                <resource>
                  <directory>${assembly.source.location}/js</directory>
                  <includes>
                    <include>mpage-fusion.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-resource-css</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${assembly.destination.location}/css</outputDirectory>
              <resources>
                <resource>
                  <directory>${assembly.source.location}/css</directory>
                  <includes>
                    <include>mpage-fusion.css</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>generate-i18n</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <copy file="${basedir}/src/main/i18n/cerner/mpagedev/mpagefusion/en_us/index.js" tofile="${basedir}/target/classes/i18n/fusion_i18n.js"></copy>
                <replace file="${basedir}/target/classes/i18n/fusion_i18n.js" token="export default" value="if (typeof i18n == &quot;undefined&quot;) { i18n =  {}; }${line.separator}if (typeof i18n.discernabu == &quot;undefined&quot;) { i18n.discernabu = {}; }${line.separator}${line.separator}i18n.discernabu.fusion ="></replace>
                <replace file="${basedir}/target/classes/i18n/fusion_i18n.js" token="&quot;use strict&quot;;" value=""></replace>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>test</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.github.eirslett</groupId>
            <artifactId>frontend-maven-plugin</artifactId>
            <version>1.3</version>
            <configuration>
              <installDirectory>target</installDirectory>
            </configuration>
            <executions>
              <execution>
                <id>npm build</id>
                <goals>
                  <goal>npm</goal>
                </goals>
                <configuration>
                  <arguments>run build:dev</arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>cerner-release-main</id>
      <name>Central Cerner Release Repository</name>
      <url>http://repo.release.cerner.corp/main/repo</url>
    </repository>
  </repositories>
  <organization></organization>
  <developers></developers>
</project>