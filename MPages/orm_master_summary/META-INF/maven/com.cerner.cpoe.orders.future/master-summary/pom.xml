	<build>
		<outputDirectory>${project.build.directory}/compressed-resources</outputDirectory>
		<resources>
			<resource>
				<directory>${project.build.directory}/compressed-resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-shared-resources</id>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${project.build.directory}/external-resources</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<!--
								use as much as needed to be specific...also
								scope,type,classifier etc
							-->
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>build-resources</id>
						<phase>process-resources</phase>
						<configuration>
							<target>
								<!--
									JQuery pulled into core MPage driver because a component exists
									that utilizes the libraries
								-->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js/jquery" includes="jquery-1.4.4.min.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js/jquery/ui/1.8.7/" includes="jquery-ui-1.8.7.custom.min.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js/excanvas" includes="excanvas.jqplot.min.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js/jquery/jqplot" includes="jquery.jqplot.min.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js/jquery/jqplot/plugins" includes="jqplot.plugins.min.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/css/${project.artifactId}.css" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/css/jquery/jqplot" includes="jquery.jqplot.min.css" />
								</concat>


								<!-- CORE GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/core/js" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/css/${project.artifactId}.css" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/core/css" includes="*.css" />
								</concat>

								<!-- UTIL GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/js" includes="*.js" />
								</concat>

								<concat destfile="${project.build.directory}/compressed-resources/css/${project.artifactId}.css" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/util/css" includes="*.css" />
								</concat>

								<!-- BASE GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/base/js" includes="*.js" />
								</concat>

								<!-- COMPONENT GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/component/js" includes="*.js" excludes="custom-component-examples.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/css/${project.artifactId}.css" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${project.build.directory}/external-resources/component/css" includes="*.css" excludes="custom-component-examples.css" />
								</concat>
								<copy file="${project.build.directory}/external-resources/component/js/custom-component-examples.js" todir="${project.build.directory}/compressed-resources/custom-components/js" />
								<copy file="${project.build.directory}/external-resources/component/css/custom-component-examples.css" todir="${project.build.directory}/compressed-resources/custom-components/css" />

								<!-- DRIVER GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/${project.artifactId}.js" fixlastline="true" eol="cr" append="yes">
									<fileset dir="${basedir}/src/main/resources/driver/js" includes="*.js" />
								</concat>
								
								<!-- move page specific css files to corresponding directory -->
								<copy todir="${project.build.directory}/compressed-resources/css">
									<fileset dir="${basedir}/src/main/resources/driver/css/nursingcommunication" />
								</copy>
								
								<!-- move help documentation to root folder --> 
								<copy todir="${project.build.directory}/compressed-resources/html">
									<fileset dir="${basedir}/src/main/resources/html" />
								</copy>
								
								<!-- LOCALE GOAL -->
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.main.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.de.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n/de" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.en_AU.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n/en_au" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.en_GB.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n/en_gb" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.es.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n/es" includes="*.js" />
								</concat>
								<concat destfile="${project.build.directory}/compressed-resources/js/locale/${locale.fr.filename}.js" fixlastline="true" eol="cr" append="yes" encoding="UTF-8">
									<fileset dir="${project.build.directory}/external-resources/i18n/fr" includes="*.js" />
								</concat>


							
								<!-- OTHER UTILITIES TO BE CONSUMED AND UTILIZED BY THE MPAGE -->
								
								<!-- copy user customization over to build -->
								<copy todir="${project.build.directory}/compressed-resources/user-customization">
									<fileset dir="${project.build.directory}/external-resources/user-customization" />
								</copy>

								<!-- copy discrete graphing over to build -->
								<copy todir="${project.build.directory}/compressed-resources/discrete-graphing">
									<fileset dir="${project.build.directory}/external-resources/discrete-graphing" />
								</copy>

								<!-- copy images to root folder -->
								<copy todir="${project.build.directory}/compressed-resources/images">
									<fileset dir="${project.build.directory}/external-resources/images" />
								</copy>
								
								<!-- copy common-orders-config over to build -->
								<copy todir="${project.build.directory}/compressed-resources/quick-orders-config">
									<fileset dir="${project.build.directory}/external-resources/quick-orders-config" />
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>copy-assembly</id>
						<phase>package</phase>
						<configuration>
							<target>
								<property name="assembly.location" value="C:\webserver\repo-discernabu\assemblies\solution\V4" />
								<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.plugin.classpath" />
								<if>
									<available file="${assembly.location}" type="dir" />
									<then>
										<copy file="target/${project.artifactId}-${project.version}.${project.packaging}" tofile="${assembly.location}\${project.artifactId}.${project.packaging}" />
									</then>
								</if>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>enforce-execution-environment</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireMavenVersion>
									<version>[2.0.9,)</version>
								</requireMavenVersion>
								<requireJavaVersion>
									<version>[1.5,)</version>
								</requireJavaVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<encoding>UTF-8</encoding>
					<showDeprecation>true</showDeprecation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>validate-changes</id>
						<phase>pre-site</phase>
						<goals>
							<goal>changes-validate</goal>
						</goals>
						<configuration>
							<failOnError>true</failOnError>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<locale.main.filename>locale</locale.main.filename>
		<locale.de.filename>locale.de</locale.de.filename>
		<locale.en_AU.filename>locale.en_AU</locale.en_AU.filename>
