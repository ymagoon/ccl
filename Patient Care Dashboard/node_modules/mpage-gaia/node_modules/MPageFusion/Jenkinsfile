pipeline {
    agent {
        node {
           label 'LINUX'
        }
    }
    stages {
        stage ('Deploy Site') {
            when { tag "v*" }
            steps {
                withCredentials([usernamePassword(credentialsId: '0ce8b892-b5ea-4412-8a5d-45facb779de7', passwordVariable: 'EC_PASSWORD', usernameVariable: 'EC_USERNAME')]) {
                    echo 'Bundling and Deploying MPages Fusion Site to AWS'
                    sh 'npm run deploy:site'
                }
            }
        }
    }
}
